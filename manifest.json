{
  "manifest_version": 3,
  "name": "Prime Speed Controller",
  "version": "1.0",
  "description": "Adjust Prime Video Speed",
  "author": "Yunus Alper GÃ¶l <github.com/yalperg>",
  "permissions": ["activeTab", "webRequest"],
  "content_scripts": [
    {
      "matches": ["*://*.primevideo.com/*"],
      "js": ["./src/content/index.js"],
      "css": ["./src/content/style.css"]
    }
  ],
  "background": {
    "js": ["./src/background/index.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
